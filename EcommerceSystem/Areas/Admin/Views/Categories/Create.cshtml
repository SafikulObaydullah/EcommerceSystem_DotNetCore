@model EcommerceSystem.Models.Category
@{
    ViewData["Title"] = "Create";
}

<h1 style="color:brown">Enter Category Information</h1>
<div class="row">
   <div class="col-md-4">
      <form asp-action="Create" asp-controller="Categories">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         <div class="form-group">
            <label asp-for="ParentID" class="control-label"></label>
            <select asp-for="ParentID" name="ParentID" asp-items="@ViewBag.ParentID" class="form-control">
                 <option value="0">Select Category</option>   
            </select>
            <span asp-validation-for="Name" class="text-danger"></span>
         </div>
         <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="control-label"></span>
         </div>
         <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
         </div>
         <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
         </div>
      </form>
   </div>
</div>

